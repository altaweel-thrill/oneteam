<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Team Section – Horizontal Scroll + Glow</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      margin: 0;
      min-height: 100vh;
      background: #0b0b0b;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #fff;
      overflow: hidden;
    }

    /* ===== Scroll Container ===== */
    .scroll-container {
      width: 100%;
      overflow-x: auto;
      overflow-y: hidden;
      padding: 40px 20px;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    /* Hide scrollbar (optional) */
    .scroll-container::-webkit-scrollbar {
      display: none;
    }

    /* ===== Team Wrapper ===== */
    .team-wrapper {
      display: flex;
      gap: 24px;
      width: max-content;
      padding: 20px;
    }

    /* ===== Team Card ===== */
    .team-card {
      flex: 0 0 auto;
      width: 220px;
      height: 320px;
      border-radius: 28px;
      padding: 20px;
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      cursor: pointer;

      transition: box-shadow 0.4s ease;
    }

    .team-card h3 {
      margin: 0;
      font-size: 20px;
      font-weight: 700;
    }

    .team-card span {
      font-size: 14px;
      opacity: 0.85;
    }

    .team-card img {
      width: 100%;
      object-fit: cover;
      object-position: top center;
      position: absolute;
      bottom: 0;
      left: 0;
      pointer-events: none;
    }

    /* ===== Colors ===== */
    .purple {
      background: #5b4bff;
    }

    .green {
      background: #b6f000;
      color: #000;
    }

    /* ===== Active Glow ===== */
    .team-card.active {
      z-index: 2;
    }

    .team-card.purple.active {
      box-shadow:
        0 0 0 1px rgba(91, 75, 255, 0.7),
        0 0 45px rgba(91, 75, 255, 0.6),
        0 25px 60px rgba(91, 75, 255, 0.35);
    }

    .team-card.green.active {
      box-shadow:
        0 0 0 1px rgba(182, 240, 0, 0.7),
        0 0 45px rgba(182, 240, 0, 0.6),
        0 25px 60px rgba(182, 240, 0, 0.35);
    }

    /* ===== Decorative Star ===== */
    .shape {
      position: absolute;
      top: 40px;
      right: 30px;
      width: 14px;
      height: 14px;
      background: rgba(255,255,255,0.4);
      clip-path: polygon(
        50% 0%, 61% 35%, 98% 35%,
        68% 57%, 79% 91%,
        50% 70%, 21% 91%,
        32% 57%, 2% 35%,
        39% 35%
      );
    }
  </style>
</head>
<body>

  <div class="scroll-container">
    <div class="team-wrapper" id="team"></div>
  </div>

  <!-- GSAP -->
  <script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>

  <script>
    const teamMembers = [
      { name: "Mr. Ali", role: "Baba", color: "purple", image: "/images/ali.png", height: "200px" },
      { name: "Nadia", role: "Lestary", color: "green", image: "/images/nadia.png", height: "300px" },
      { name: "Evan", role: "Caster Lee", color: "purple", image: "/images/33.png", height: "250px" },
      { name: "Stefy", role: "Catlyna", color: "green", image: "/images/44.png", height: "250px" },
       { name: "Mr. Ali", role: "Baba", color: "purple", image: "/images/ali.png", height: "200px" },
      { name: "Nadia", role: "Lestary", color: "green", image: "/images/nadia.png", height: "300px" },

    ];

    const container = document.getElementById("team");

    teamMembers.forEach(member => {
      const card = document.createElement("div");
      card.className = `team-card ${member.color}`;

      card.innerHTML = `
        <div>
          <h3>${member.name}</h3>
          <span>${member.role}</span>
        </div>

        <div class="shape"></div>

        <img src="${member.image}" height="${member.height}" alt="${member.name}">
      `;

      container.appendChild(card);
    });

    const cards = document.querySelectorAll(".team-card");

    /* First card active */
    cards[0].classList.add("active");

    /* Hover glow switch */
    cards.forEach(card => {
      card.addEventListener("mouseenter", () => {
        cards.forEach(c => c.classList.remove("active"));
        card.classList.add("active");
      });

      card.addEventListener("mouseleave", () => {
        cards.forEach(c => c.classList.remove("active"));
        cards[0].classList.add("active");
      });
    });

    /* GSAP entrance */
    gsap.from(".team-card", {
      y: 40,
      opacity: 0,
      duration: 0.8,
      ease: "power3.out",
      stagger: 0.12
    });

    /* Mouse wheel → horizontal scroll */
    const scrollContainer = document.querySelector(".scroll-container");

    scrollContainer.addEventListener("wheel", (e) => {
      e.preventDefault();
      scrollContainer.scrollLeft += e.deltaY * 1.2;
    }, { passive: false });
  </script>

</body>
</html>